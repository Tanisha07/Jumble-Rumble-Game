<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Main2Activity">

    <TextView
            android:text="Tries : "
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/txt_ChancesLeft" android:textSize="14sp"
            app:layout_constraintTop_toTopOf="@+id/txt_Time"
            app:layout_constraintBottom_toBottomOf="@+id/txt_Time" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="72dp" app:layout_constraintVertical_bias="0.0" android:gravity="center"/>
    <TextView
            android:text="Time : "
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/txt_Time" android:textSize="14sp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:gravity="center" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintHorizontal_bias="0.499"/>
    <TextView
            android:text="Score : "
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:id="@+id/txt_Score" android:textSize="14sp"
            android:gravity="center" app:layout_constraintTop_toTopOf="@+id/txt_Time"
            app:layout_constraintBottom_toBottomOf="@+id/txt_Time" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="72dp" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="Enter the correct word"
            android:layout_width="269dp"
            android:layout_height="30dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/textView7" android:gravity="center"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_Time"
            app:layout_constraintHorizontal_bias="0.515" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/txt_Answer" app:layout_constraintVertical_bias="0.0"
            android:textSize="18sp"/>
    <TextView
            android:layout_width="267dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/txt_Answer" android:gravity="center" android:textSize="24sp"
            app:layout_constraintTop_toBottomOf="@+id/txt_Time" android:layout_marginTop="48dp"
            app:layout_constraintHorizontal_bias="0.512"/>
    <TextView
            android:text="S"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/t1" android:onClick="c1" app:layout_constraintEnd_toStartOf="@+id/t2"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="@+id/t2" app:layout_constraintBottom_toBottomOf="@+id/t2"
            android:textSize="30sp"/>
    <TextView
            android:text="O"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/t2" android:onClick="c2"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toStartOf="@+id/t3"
            android:layout_marginEnd="8dp" app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintTop_toTopOf="@+id/t3" app:layout_constraintBottom_toBottomOf="@+id/t3"
            android:textSize="30sp" android:gravity="center"/>
    <TextView
            android:text="E"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/t3" android:onClick="c3" tools:text="E" app:layout_constraintEnd_toStartOf="@+id/t4"
            app:layout_constraintTop_toTopOf="@+id/t4" android:textSize="30sp"
            android:gravity="center" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="S"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/t6" android:onClick="c6" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="196dp"
            app:layout_constraintTop_toTopOf="@+id/t5" app:layout_constraintBottom_toBottomOf="@+id/t5"
            android:textSize="30sp" android:gravity="center" app:layout_constraintVertical_bias="1.0"/>
    <TextView
            android:text="N"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/t4" android:onClick="c4" app:layout_constraintEnd_toStartOf="@+id/t5"
            app:layout_constraintTop_toBottomOf="@+id/txt_Answer" android:layout_marginTop="8dp"
            android:textSize="30sp" android:gravity="center"/>
    <TextView
            android:text="A"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/t5" android:onClick="c5" app:layout_constraintEnd_toStartOf="@+id/t6"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/t4" app:layout_constraintBottom_toBottomOf="@+id/t4"
            android:textSize="30sp" android:gravity="center" app:layout_constraintVertical_bias="0.0"/>
    <Button
            android:text="Check"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_Check" android:onClick="check"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/txt_Hint"
            app:layout_constraintVertical_bias="1.0"
            android:layout_marginEnd="136dp" app:layout_constraintEnd_toEndOf="parent"/>
    <Button
            android:text="Clear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/button_Clear" android:onClick="clear"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="16dp"
            app:layout_constraintTop_toTopOf="@+id/button_Check"
            app:layout_constraintBottom_toBottomOf="@+id/button_Check" app:layout_constraintVertical_bias="0.0"
            app:layout_constraintEnd_toStartOf="@+id/button_Check" android:layout_marginEnd="8dp"
            app:layout_constraintHorizontal_bias="0.437"/>
    <TextView
            android:text="  Hint : "
            android:layout_width="530dp"
            android:layout_height="48dp"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/txt_Hint" android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/t4"
            app:layout_constraintHorizontal_bias="0.567" android:textSize="14sp"
    />
</android.support.constraint.ConstraintLayout>